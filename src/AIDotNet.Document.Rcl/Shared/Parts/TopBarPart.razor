<MAppBar App=true Flat=true Height="Height" ClippedLeft=Clipped Color="white" Style="padding-right:-14px">

    <MSpacer Style="height:100%;margin-left:-14px ;-webkit-app-region: drag; webkit-app-region: drag;" @ondblclick="WindowService.Maximize" />

    <MButton Text=true Style="min-width:36px" OnClick="WindowService.Minimize">
        <MIcon Small=true>mdi-minus</MIcon>
    </MButton>

    <MButton Text=true Style="min-width:36px" OnClick="WindowService.Maximize">
        <MIcon Small=true Icon="@(WindowService.IsMaximized?"mdi-window-restore":"mdi-checkbox-blank-outline")" />
    </MButton>

    <MHover>
        <MButton @attributes=context.Attrs Text=true Style="min-width:36px;margin-right:-14px" Class="@(context.Hover?"red":string.Empty)" OnClick="WindowService.Close">
            <MIcon Small=true Color="@(context.Hover?"white":string.Empty)">mdi-close</MIcon>
        </MButton>
    </MHover>

</MAppBar>



